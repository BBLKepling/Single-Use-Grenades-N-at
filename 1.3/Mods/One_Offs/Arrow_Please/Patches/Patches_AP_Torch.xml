<?xml version="1.0" encoding="utf-8" ?>
<Patch>

        <!-- Single Use Throwing Torch -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Ranged_Torch"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>Verb_ShootOneUse</verbClass>
    </value>
  </Operation>

        <!-- Reduce Mass -->

  <Operation Class="XmlExtensions.PatchOperationMath">
    <xpath>Defs/ThingDef[defName="Ranged_Torch"]/statBases/Mass</xpath>
    <value>10</value>
    <operation>/</operation>
  </Operation>

        <!-- Tag -->

  <Operation Class="XmlExtensions.PatchOperationSafeAdd">
    <xpath>Defs/ThingDef[defName="Ranged_Torch"]</xpath>
    <value>
      <tradeTags>
        <li>NeoGnat</li>
      </tradeTags>
    </value>
  </Operation>

        <!-- New Base -->

  <Operation Class="PatchOperationAttributeSet">
    <xpath>Defs/ThingDef[defName="Ranged_Torch"]</xpath>
    <attribute>ParentName</attribute>
    <value>BaseGnatNeolithic</value>
  </Operation>

        <!-- Recipe -->

  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Ranged_Torch"]/costList | Defs/ThingDef[defName="Ranged_Torch"]/recipeMaker</xpath>
  </Operation>

</Patch>