<?xml version="1.0" encoding="utf-8" ?>
<Patch>

        <!-- Single Use Type 82 Grenade -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PLA_Type82Grenade"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>Verb_ShootOneUse</verbClass>
    </value>
  </Operation>

        <!-- Reduce Mass -->

  <Operation Class="XmlExtensions.PatchOperationMath">
    <xpath>Defs/ThingDef[defName="PLA_Type82Grenade"]/statBases/Mass</xpath>
    <value>10</value>
    <operation>/</operation>
  </Operation>

        <!-- New Base -->

  <Operation Class="PatchOperationAttributeSet">
    <xpath>Defs/ThingDef[defName="PLA_Type82Grenade"]</xpath>
    <attribute>ParentName</attribute>
    <value>BaseGnatGrenade</value>
  </Operation>

        <!-- Recipe -->

  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="PLA_Type82Grenade"]/costList</xpath>
  </Operation>

</Patch>